<!--pages/login/login.wxml-->
<view class="container">
  <form catchsubmit="formSubmit">
    <view class="weui-cell weui-cell_input">
      <input class="weui-input" name="phone" focus placeholder="手机号" />
    </view>
    <view class="weui-cell weui-cell_input">
      <input class="weui-input" name="password" type="password" placeholder="密码" />
    </view>
    <view class="btn-area">
      <button style="margin: 30rpx 0" type="primary" formType="submit">登录</button>
      <button type="default" open-type="getUserInfo" bindgetuserinfo="getUserInfo">微信登录</button>
    </view>
  </form>
</view>

